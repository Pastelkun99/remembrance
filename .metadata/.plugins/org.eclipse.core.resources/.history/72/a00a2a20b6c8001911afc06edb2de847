<script>

function checkId() {
	var inputed = $('#user_pw_before').val();
	console.log(inputed);

	$.ajax({
		data : {
			user_pw_before : inputed
		},
		// 레스트 컨트롤러 이름 적시
		url : "/controller/checkPw.do",
		success : function(data) {
			
			if(data==1) {
				
				$('#updatebtn').prop("disabled", false);
				
			} else {
				
				$('#updatebtn').prop("disabled", true);
				
			}
			
		}
	});
}

</script>